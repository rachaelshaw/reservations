<div id="reservations-overview" v-cloak>


  <div class="container container-fluid pt-5 pb-5" v-if="schedule">
    <h3 class="mt-3"><button class="btn btn-primary mr-2" @click="clickPreviousButton()">«</button>{{scheduleDisplayDate}}<button class="btn btn-primary ml-2" @click="clickNextButton()">»</button></h3>
    <div v-for="timeSlot of schedule" :key="timeSlot.startTime">
      <div class="card mb-2">
        <div class="card-header" :class="timeSlot.reservations.length === 0 ? 'border-bottom-0' : ''">
          {{timeSlot.startTime}}
        </div>
        <div class="card-body" v-if="timeSlot.reservations.length > 0">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>Guest name</th>
                <th>Guest email</th>
                <th>Party size</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="reservation of timeSlot.reservations" :key="timeSlot.startTime+'--'+reservation.guestEmailAddress">
                <td>{{reservation.guestName}}</td>
                <td>{{reservation.guestEmailAddress}}</td>
                <td>{{reservation.partySize}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <ajax-overlay :syncing="syncing"></ajax-overlay>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
